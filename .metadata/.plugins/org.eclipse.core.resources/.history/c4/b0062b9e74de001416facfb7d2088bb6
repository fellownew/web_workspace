<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
function sendForm1(){
	//체크박스 객체 조회
	var hobbyCB = document.f1.hobby;//hobby가 여러개이기때문에 배열로 리턴.
	var cnt = 0;
	for(var i=0;i<hobbyCB.length;i++){
		if(hobbyCB[i].checked){
			cnt++;
		}
	}
	if(!cnt||cnt>3){
		alert("취미는 1~3개만 선택해주세요");
	}else{
		document.f1.submit();
	}
}
function checkAll(){
	var hobbyCB = document.f1.hobby;
	var allcheck = document.f1.allcheck.checked; //체크상태를 받아서, allcheck와 똑같이 만듦
	if(!document.f1.allcheck.checked){//전체선택 안되어 있었다면.
for(var i=0;i<hobbyCB.length;i++){
			if(hobbyCB[i].checked){
				hobbyCB[i].click();
			}
		}
	}else{
		for(var i=0;i<hobbyCB.length;i++){
			if(!hobbyCB[i].checked){
				hobbyCB[i].click();
			}
		}		
	}

}
function sendForm2(){
	//menu가 선택되지 않으면 경고창을 띄워주고 전송을 막음.
	var flag = false;
	var menu = document.f1.menu;
	for(var i=0;i<menu.length;i++){
		if(menu[i].checked){
			flag=true;
		}
	}
}
</script>
</head>
<body>
<form action="response.jsp" name="f1" onsubmit="return sendForm2();">

취미를 선택하세요 (1개~3개)<p>
<input type="checkbox" name="hobby" value="독서" id="reading"><label for="reading">독서</label>
