function selectTest2(){
	//번호가 선택되었으면 전송처리, 번호가 선택 안됐으면 선택하라는 경고를 보여주고 전송하지 않는다.
	if(document.f1.hp.selectedIndex==0){
		alert("핸드폰 번호를 입력하세요");
		return false;
	}else{
		alert("번호를 선택했습니다.");
	}
}
function selectTest3(){
	var value = document.f1.hp.options[document.f1.hp.selectedIndex].value;
	alert(value);
	var value2 = document.f1.hp.value;
	
	
	
