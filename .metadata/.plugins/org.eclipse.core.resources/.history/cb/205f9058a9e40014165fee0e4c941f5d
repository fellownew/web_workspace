<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>


<style type="text/css">
	a{
		text-decoration: none;
	}
</style>
<script type="text/javascript" src="/jQuery_class/jquery.js"></script>
<script type="text/javascript">
	$(document).ready(function(){
		$("#chk").bind("click",function(){
			alert("체크박스 클릭");
		});
		$("#btn").click(function(){
			alert("버튼 클릭");
		});
		$("#chk").on("click",function(){
			//이벤트 처리 함수에서 이벤트 소스(dom 객체)에 접근. - this
			//여기서의 this는 체크박스이며, 이것은 jQuery객체가 아닌 dom노드 객체이다.		
			if(this.checked){
				alert("메일 수신을 허가합니다.");
			}else{
				alert("메일 수신을 거부합니다.");
			}			
		});
		$("a").on("mouseover",function(){
			$(this).css("text-decoration","underline");
		});
		$("a").on("mouseout",function(){
			$(this).css("text-decoration","none");
		});
		$("ul li").hover(function(){
			$(this).css("text-decoration","underline").css("color","blue");			
		},function(){
			$(this).css("text-decoration","none").css("color","black");
		});
	});






</script>
</head>
<body> 
메일 수신여부 : 
<input type="checkbox" name="mailing" value="true" id="chk" ><br>
<input type="button" value="click" id="btn">
