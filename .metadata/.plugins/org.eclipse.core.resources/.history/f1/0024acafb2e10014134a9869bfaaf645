<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">

var flag = true;

function join(){
	if(flag){//true이면 전송이 안되도록 처리
		alert("사용할 수 없는 ID 입니다.");
		document.getElementById("id").focus();
		return !flag;
	}
}	
function check(){
	var id = document.getElementById("id").value;
	if(id.length<6){
		document.getElementById("check_id").innerHTML = "<b>아이디는 6글자 이상이어야합니다.</b>";
	}else{
		document.getElementById("check_id").innerHTML = "";
		
	}
}

</script>
</head>
<body>
<form name="f1" method="post" action="join" onsubmit="return join()">
ID : <input type="text" name="id" id="id" onkeyup="check()"> <span id="check_id"></span><br>
password : <input type="password" name="password" id="password"><br>
가입 양식<p>
<input type="submit" value="가입">
</form>
</body>
</html>