package servlet.dispatch;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class BasicDispatchTestServlet extends HttpServlet{
	//요청 파라미터 page값을 조회
	public void doGet(HttpServletRequest request,HttpServletResponse response) throws IOException, ServletException{
		request.setCharacterEncoding("UTF-8");
	//page=one : one.html, page=two : two.jsp 로 요청디스패치 방식으로 수행을 이동.
		RequestDispatcher rd = null;
		String page = request.getParameter("page");
		rd = page.equals("one")?request.getRequestDispatcher("/dispatch/one.html"):request.getRequestDispatcher("/dispatch/two.jsp");
		if(page.equals("one")){
			rd= request.getRequestDispatcher("/dispatch/one.html");//app기준의 url이기 때문에 /myweb으로 시작하면 안됨.
		}else{
			rd= request.getRequestDispatcher("/form/login_fail.jsp");//app기준의 url이기 때문에 /myweb으로 시작하면 안됨.
			
		}
		
		
	}

}
