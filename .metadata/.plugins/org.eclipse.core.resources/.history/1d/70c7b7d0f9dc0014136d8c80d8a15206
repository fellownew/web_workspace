<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Function</title>
	<script type="text/javascript">
		//한줄 주석 동일함.
		/*블럭 주석*/
		//hello1() 함수 선언
		function hello1(){
			window.alert("경고창을 띄운다");
			alert("한국어:안녕\n영어:Hello\n일본어:こんにちは");//window 생략됨.
		}
		//값으로 설정한 함수
		var hello2 = function(){
			alert("hello2 !!!!!!!!!!!");
		}
		//매개변수 함수
		function hello3(name,age){//매개변수에는 var 안함.
			alert(name+"님 안녕하세요");
			alert("나이 : "+age);
			var r = sum(23,32);
			alert("더한값 : "+r);
		}
		//리턴 함수
		function sum(num1,num2){
			var result = num1+num2;
			return result;
		}
		//함수는 객체... 값이다.
		function worker(){
			return function(){
				alert("worker가 리턴한 함수")
			}
		}
		function caller(){
			var test = worker(); //리턴값 받겠다
			test(); //함수가 리턴되어 왔으니 그냥 실행시키면 됨.
		}
	</script>


</head>
<body>
	<script type="text/javascript">
		//hello1(); //함수호출
		
	
	</script>
	
	<!-- 버튼은 form 태그 내에선 전송버튼, 밖에는 아무런 기능이 없는 일반적인 버튼 -->
	<button onclick="hello2();">hello2 호출 버튼</button><br/>
	<button onclick="hello3('김철수',22);">hello3 호출 버튼</button><br/>
	<button onclick="alert(sum(6,2));">계산 호출</button>
	<button onclick="caller();">caller 호출</button>
</body>
</html>