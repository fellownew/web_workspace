<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
function inputTest(){
	//만약 id가 6글자 이하라면 경고창
	var idTxt = document.f1.id;
	if(idTxt.value.length<6){
		alert("ID는 6글자 이상 입력하세요");
		idTxt.focus();
		return;
	}
	if(!document.f1.password.value){
		alert("패스워드를 입력하세요")
		document.f1.password.focus();
		return;
	}
	var age = document.f1.age;
	if(!age.value){
		alert("나이를 입력하세요");
		return;
	}
	if(isNaN(age.value)){
		alert("나이는 숫자로 입력하세요");
		document.f1.age.focus();
		return;
	}else{
		alert("나이를 잘 입력했네요");
	}
	
	if(!document.f1.intro.value){
		alert("글을 입력하세요");
		document.f1.intro.focus();
		return;
	}
} 
</script> 
</head>
<body>
<form action="response.jsp" name="f1">
ID : <input type="text" name="id"><br>
Password : <input type="password" name="password"><br>
나이 : <input type="text" name="age"><br>
자기소개<br>
<textarea cols="50" rows="10" name="intro"></textarea><p>
<input type="button" value="txt체크" onclick="inputTest();"><br>
</form>
</body>
</html>


























