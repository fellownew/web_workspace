package servlet.dispatch;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class BasicDispatchTestServlet extends HttpServlet{
	//요청 파라미터 page값을 조회
	public void doGet(HttpServletRequest request,HttpServletResponse response) throws IOException, ServletException{
		request.setCharacterEncoding("UTF-8");
	//page=one : one.html, page=two : two.jsp 로 요청디스패치 방식으로 수행을 이동.

		String page = request.getParameter("page");
		String url = page.equals("one")?"/dispatch/one.html":"/dispatch/two.jsp";
		RequestDispatcher rd = page.equals("one")?request.getRequestDispatcher("/dispatch/one.html"):request.getRequestDispatcher("/dispatch/two.jsp");

	}

}
