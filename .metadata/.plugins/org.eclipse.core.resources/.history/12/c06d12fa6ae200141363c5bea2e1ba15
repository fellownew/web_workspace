<script type="text/javascript">
function javascriptObject(){
	var student ={
			name:"홍길동",
			age:20,
			height:176.8,
			hobby:["게임","스포츠","자전거"],
			study:function(){
				alert(this.name+"공부합니다.");//메소드에서 객체의 property(attribute)접근시 this 이용
			}
	}
}

function getMember(){
	var member = {"id":"id-1",name:"홍길동",address:"경기도 성남시 분당구 삼평동"};
	document.getElementById("id").value = member.id;
	document.getElementById("name").value = member.name;
	document.getElementById("address").value = member.address;
	
}
function getIds(){
	var ids = ["id-1","id-2","id-3","id-4","id-5"];
	var idSel = document.getElementById("ids");
	while(idSel.hasChildNodes()){
		idSel.removeChild(idSel.firstChild);
	}
	idSel[0]=new Option("아이디를 선택하세요");
	for(var i = 0; i< ids.length;i++){
		idSel[i+1]=new Option(ids[i]);
	}
}

function getIds2(){
	var ids = {ids:["id-a","id-b","id-c","id-d","id-e","id-f","id-g"]};
	var idSel = document.getElementById("ids");
	for(var i = 0;i<ids.ids.length;i++){
		idSel[i+1]=new Option(ids.ids[i]);
	}
}

function getAllMembers(){2
	var list = [{id:"id-1",name:"김철수",age:20},
	            {id:"id-2",name:"홍길동",age:30},
	            {id:"id-3",name:"임꺽정",age:25},
	            {id:"id-4",name:"장길산",age:26},
	            {id:"id-5",name:"박영희",age:25}];
	var tbody = document.getElementById("tbody");
	//tbody 모든 자식노드 삭제를 해야 계속 갱신 됨.
	while(tbody.hasChildNodes()){
		tbody.removeChild(tbody.firstChild);
	}
	//tbody에 리스트에 있는 내용들을 추가.
	for(var i = 0;i<list.length;i++){
		var tr = document.createElement("tr");
		var td1 = document.createElement("td");
		var td2 = document.createElement("td");
		var td3 = document.createElement("td");
		var idTx = document.createTextNode(list[i].id);
		var nameTx = document.createTextNode(list[i].name);
		var ageTx = document.createTextNode(list[i].age);
		td1.appendChild(idTx);
		td2.appendChild(nameTx);
		td3.appendChild(ageTx);
		tr.appendChild(td1);
		tr.appendChild(td2);
		tr.appendChild(td3);
		tbody.appendChild(tr);
		
	}
		
}	
function getAllMembers2(){
	var list = [{id:"id-6",name:"김철수",age:21},
	            {id:"id-7",name:"홍길동",age:35},
	            {id:"id-8",name:"임꺽정",age:22},
	            {id:"id-9",name:"장길산",age:23},
	            {id:"id-10",name:"박영희",age:52}];
	//innerHTML을 이용하여 tbody에 리스트 내의 회원정보들을 출력
	var tbody = document.getElementById("tbody");
	var txt = "<tr><td>"+list[i].id+"</td><td>"+list[i].name+"</td><td>"+list[i].age+"</td></tr>";
	tbody.innerHTML(txt);
	
	
}

</script>
