<script type="text/javascript">

var flag = true;

function join(){
	if(flag){//true이면 전송이 안되도록 처리
		alert("사용할 수 없는 ID 입니다.");
		document.getElementById("id").focus();
		return !flag;
	}
	
	var id = document.getElementById("id").value;
	if(window.ActiveXObject){//IE 구 버전인지 확인
		xhr = new ActiveXObject("Microsoft.XMLHTTP");
	}else{
		xhr = new XMLHttpRequest();	
	}	
	xhr.open("POST","/javascript_class/ajax",true);	
	xhr.onreadystatechange = callback;	
	xhr.setRequestHeader("content-type", "application/x-www-form-urlencoded");
	xhr.send("cmd=plus&operand1="+operand1+"&operand2="+operand2+"&operator="+op);
	
}	


function check(){
	var id = document.getElementById("id").value;
	if(id.length<6){
		document.getElementById("check_id").innerHTML = "<b>아이디는 6글자 이상이어야합니다.</b>";
	}else{
		document.getElementById("check_id").innerHTML = "";
		flag = true;
	}
}

